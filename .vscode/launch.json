	"version": "0.2.0",
	"configurations": [
	{
		"type": "lldb",
		"request": "launch",
		"name": "Cargo launch",
		"cargo": {
			"args": [
				"build",
				"--lib"
			]
		},
		"program": "${cargo:program}",
		"args": []
	},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'learn_rust'",
			"cargo": {
				"args": [
					"build",
					"--bin=learn_rust",
					"--package=learn_rust"
				],
				"filter": {
					"name": "learn_rust",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in executable 'learn_rust'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=learn_rust",
					"--package=learn_rust"
				],
				"filter": {
					"name": "learn_rust",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		}
	]
}